{
  "name": "portafolio-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "e2e": "playwright test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "audit:security": "npm audit --production",
    "audit:full": "npm audit",
    "optimize:images": "node ./scripts/optimize-images.js",
    "audit:lighthouse": "lhci autorun --config=./lighthouserc.cjs",
    "lh:desktop": "node ./scripts/run-lhci.js ./lighthouserc.desktop.cjs",
    "lh:mobile": "node ./scripts/run-lhci.js ./lighthouserc.mobile.cjs",
    "lh:all": "node ./scripts/run-lhci.js ./lighthouserc.desktop.cjs && node ./scripts/run-lhci.js ./lighthouserc.mobile.cjs",
    "prepare": "husky install",
    "preview": "vite preview",
    "serve:dist": "node ./scripts/serve-dist.js"
  },
  "dependencies": {
    "framer-motion": "^12.23.24",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-tsparticles": "^2.12.2",
    "recharts": "^2.12.7",
    "tsparticles-slim": "^2.12.0",
    "tsparticles": "^2.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sharp": "^0.33.4",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.2",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss,html,md}": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "esbuild": "0.24.4"
  }
}
